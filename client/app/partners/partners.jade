include ../../components/mixins/side-bar/_side-bar.jade
include ../../components/mixins/branch-grid/_branch-grid.jade
header
.partners
  .container
    .row
      h1.partners__title {{App.partners.title}}
    .row
      aside.col-xs-3
        .row.side-bar
          a(href="#" ng-click="filter('all', $event)")
            h3.side-bar__item__title.side-bar__item__title--active {{App.partners.sideBarTitle}}
          .side-bar__item(ng-repeat="item in menuFilters")
            a(href="#" ng-click="filter(item.title, $event)")
              h3.side-bar__item__title {{item.title}}
            .side-bar__item__branch(ng-repeat="gold in item.branches.golds")
              | {{gold.name}}
            .side-bar__item__branch(ng-repeat="silver in item.branches.silvers")
              | {{silver.name}}
            .side-bar__item__branch(ng-repeat="normal in item.branches.normals")
              | {{normal.name}}
      main.col-xs-9
        .row.partners__main
          .branch-grid
            .row
               .branch-grid__item.col-sm-4(ng-repeat="item in branches")
                  .branch-grid__item__logo--container
                    .branch-grid__item__logo
                      img.branch-grid__item__logo__img(src="/assets/images/logo/{{item.logo}}" alt="")
                      .branch-grid__item__logo__content
                        h3.branch-grid__item__logo__header {{item.name}}
